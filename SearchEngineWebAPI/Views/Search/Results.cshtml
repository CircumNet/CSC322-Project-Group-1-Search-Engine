<!--
    FILE: Views/Search/Results.cshtml

    This is the results page view, now displaying results
    in a clean, modern card layout.
-->
@model List<SearchEngine.Models.SearchResultItem>
@using SearchEngine.Models

@{
    ViewData["Title"] = "Search Results";
    var suggestions = ViewData["Suggestions"] as List<SearchResultItem>;
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="h4">Results for: "<span class="text-primary font-weight-bold">@ViewData["Query"]</span>"</h3>
        <span class="badge badge-pill badge-secondary">@Model.Count results</span>
    </div>

    @if (Model.Any())
    {
        <div class="row">
            @foreach (var result in Model.OrderByDescending(r => r.RelevanceScore))
            {
                <div class="col-12 mb-3">
                    <div class="result-card p-4 rounded-lg shadow-sm">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <h5 class="mb-0">
                                <a href="@result.FilePath" class="text-primary text-decoration-none">@result.Title</a>
                            </h5>
                            <div class="d-flex align-items-center">
                                <span class="badge badge-success mr-2">Score: @result.RelevanceScore.ToString("F2")</span>
                                <span class="badge badge-info">@result.FileType.TrimStart('.')</span>
                            </div>
                        </div>
                        <p class="text-muted">@result.Preview</p>
                        <p class="small text-secondary mb-0">
                            <i class="fas fa-file-alt mr-1"></i>
                            <span class="font-weight-bold">Path:</span> <code>@result.FilePath</code>
                        </p>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center p-5 rounded-lg bg-light shadow-sm">
            <i class="fas fa-frown fa-4x mb-3 text-muted"></i>
            <h4 class="font-weight-bold">No direct matches found.</h4>
            <p class="text-muted">Your search returned 0 results. Please try a different query or upload more documents.</p>
        </div>
        
        @if (suggestions != null && suggestions.Any(s => s.RelevanceScore > 0))
        {
            <div class="mt-5">
                <h4 class="h5 font-weight-bold text-muted mb-3">Maybe you're looking for one of these?</h4>
                <div class="list-group">
                    @foreach (var suggestion in suggestions.OrderByDescending(s => s.RelevanceScore))
                    {
                        <div class="list-group-item list-group-item-action d-flex flex-column align-items-start suggestion-item mb-2">
                            <div class="d-flex w-100 justify-content-between">
                                <h5 class="mb-1"><a href="@suggestion.FilePath" class="text-primary text-decoration-none">@suggestion.Title</a></h5>
                                <small class="text-muted">Score: @suggestion.RelevanceScore.ToString("F2")</small>
                            </div>
                            <p class="mb-1 text-secondary small">@suggestion.Preview</p>
                            <small class="text-muted">Path: <code>@suggestion.FilePath</code></small>
                        </div>
                    }
                </div>
            </div>
        }
    }

    <div class="mt-5 text-center">
        <a href="/" class="btn btn-outline-secondary btn-lg">Back to Search</a>
    </div>
</div>
